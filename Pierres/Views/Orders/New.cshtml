@{
    Layout = "_Layout";
}
    <h1>Add a new order to @Model.Name</h1>
    <form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <label for="title">City: </label>
    <input id="title" name="title" type="text"><br><br>
    <label for="description">Description: </label>
    <input id="description" name="description" type="text"><br>
    <label for="price">Price: </label>
    <input id="price" name="price" type="number"><br>
    <label for="date">Description: </label>
    <input id="date" name="date" type="date"><br>
    <button type="submit">Submit Order</button>
    </form>